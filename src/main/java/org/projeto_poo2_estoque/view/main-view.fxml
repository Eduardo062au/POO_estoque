<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="380.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeto_poo2_estoque.controller.MainController">

   <top>
      <HBox alignment="CENTER" prefHeight="40.0" style="-fx-background-color: #2D2F33;">
         <children>
            <Label text="Cadastro de Produtos" textFill="white">
               <font>
                  <Font name="JetBrains Mono SemiBold" size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>

   <center>
      <VBox spacing="5" style="-fx-background-color: #E7E8EA;">
         <padding>
            <Insets top="0" right="0" bottom="0" left="0"/>
         </padding>

         <children>

            <GridPane hgap="10" vgap="10" style="-fx-background-color: #E7E8EA;">
               <padding>
                  <Insets top="15" right="15" bottom="15" left="15"/>
               </padding>

               <columnConstraints>
                  <ColumnConstraints prefWidth="120" />
                  <ColumnConstraints prefWidth="200" />
                  <ColumnConstraints prefWidth="120" />
                  <ColumnConstraints prefWidth="200" />
               </columnConstraints>

               <children>

                  <Label text="ID:" textFill="#1A1A1A" GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <font>
                        <Font name="JetBrains Mono" size="12" />
                     </font>
                  </Label>

                  <TextField fx:id="txtID" prefHeight="25" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-background-color: white; -fx-border-color: #C0C0C0;">
                     <font>
                        <Font name="JetBrains Mono Thin" size="12" />
                     </font>
                  </TextField>

                  <Label text="Nome:" textFill="#1A1A1A" GridPane.columnIndex="2" GridPane.rowIndex="0">
                     <font>
                        <Font name="JetBrains Mono" size="12" />
                     </font>
                  </Label>

                  <TextField fx:id="txtNome" prefHeight="25" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-background-color: white; -fx-border-color: #C0C0C0;">
                     <font>
                        <Font name="JetBrains Mono Thin" size="12" />
                     </font>
                  </TextField>

                  <Label text="Quantidade:" textFill="#1A1A1A" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <font>
                        <Font name="JetBrains Mono" size="12" />
                     </font>
                  </Label>

                  <TextField fx:id="txtQuantidade" prefHeight="25" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: white; -fx-border-color: #C0C0C0;">
                     <font>
                        <Font name="JetBrains Mono Thin" size="12" />
                     </font>
                  </TextField>

                  <Label text="Preço:" textFill="#1A1A1A" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <font>
                        <Font name="JetBrains Mono" size="12" />
                     </font>
                  </Label>

                  <TextField fx:id="txtPreco" prefHeight="25" GridPane.columnIndex="3" GridPane.rowIndex="1" style="-fx-background-color: white; -fx-border-color: #C0C0C0;">
                     <font>
                        <Font name="JetBrains Mono Thin" size="12" />
                     </font>
                  </TextField>

               </children>
            </GridPane>

            <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #D1D2D4;">
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10"/>
               </padding>

               <children>

                  <Button text="Adicionar" onAction="#onAdicionarClick" prefWidth="120" prefHeight="30" textFill="#1A1A1A"
                          style="-fx-background-color: #FFFFFF; -fx-border-color: #A8A8A8; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <cursor><Cursor fx:constant="HAND"/></cursor>
                     <font><Font name="JetBrains Mono" size="11"/></font>
                  </Button>

                  <Button text="Atualizar" onAction="#onAtualizarClick" prefWidth="120" prefHeight="30" textFill="#1A1A1A"
                          style="-fx-background-color: #FFFFFF; -fx-border-color: #A8A8A8; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <cursor><Cursor fx:constant="HAND"/></cursor>
                     <font><Font name="JetBrains Mono" size="11"/></font>
                  </Button>

                  <Button text="Excluir" onAction="#onExcluirClick" prefWidth="120" prefHeight="30" textFill="#1A1A1A"
                          style="-fx-background-color: #FFFFFF; -fx-border-color: #A8A8A8; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <cursor><Cursor fx:constant="HAND"/></cursor>
                     <font><Font name="JetBrains Mono" size="11"/></font>
                  </Button>

               </children>
            </HBox>

            <TableView fx:id="tableView" prefHeight="200.0" style="-fx-background-color: white; -fx-border-color: #C0C0C0;">
               <columns>
                  <TableColumn fx:id="colId" prefWidth="80" text="ID" />
                  <TableColumn fx:id="colNome" prefWidth="250" text="NOME" />
                  <TableColumn fx:id="colPreco" prefWidth="140" text="PREÇO" />
                  <TableColumn fx:id="colQtd" prefWidth="140" text="QUANTIDADE" />
               </columns>
            </TableView>

         </children>
      </VBox>
   </center>

</BorderPane>
